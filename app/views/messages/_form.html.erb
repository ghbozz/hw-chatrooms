<%= turbo_frame_tag 'edit_message_form' do %>
  <% if params[:action] == 'edit' %>
    <%= simple_form_for message do |f| %>
      <%= f.input :content %>
      <%= f.submit 'Send message', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    <% end %>
  <% else %>
    <%= simple_form_for [@chatroom, message] do |f| %>
      <%= f.input :content %>
      <%= f.submit 'Send message', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    <% end %>
  <% end %>
<% end %>