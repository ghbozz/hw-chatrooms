<%= turbo_stream_from 'chatrooms_list' %>

<div class="chatrooms w-1/3 border-r-2 border-gray-200 h-full p-6">
  <% chatrooms.each do |chatroom| %>
    <%= link_to chatroom_path(chatroom) do %>
      <% if chatroom.id.to_s != params[:id] %>
        <%= turbo_frame_tag "#{dom_id(chatroom)}_btn" do %>
          <%= render 'btn', chatroom: chatroom, new_message: false %>
        <% end %>
      <% else %>
        <%= render 'btn', chatroom: chatroom, new_message: false %>
      <% end %>
    <% end %>
  <% end %>
</div>